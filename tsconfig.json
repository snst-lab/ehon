{
    "compilerOptions": {
        "sourceMap": true,
        "target": "es5",
        "lib": ["dom","es6","es2015.core"],
        "outDir": "build/script",
        "module": "commonjs",
        "moduleResolution": "node",
        // "types" : ["node"],
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": false,
        "pretty": true,
        "noEmitHelpers": true,
        "importHelpers": true
    },
    "include": [
        "src/*.ts",
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}